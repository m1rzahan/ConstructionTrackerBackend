{
  "ConnectionStrings": {
    "Default": "${DATABASE_URL}"
  },
  "App": {
    "ServerRootAddress": "${SERVER_URL}",
    "ClientRootAddress": "${CLIENT_URL}",
    "CorsOrigins": "${CORS_ORIGINS}"
  },
  "Authentication": {
    "JwtBearer": {
      "IsEnabled": "true",
      "SecurityKey": "${JWT_SECRET_KEY}",
      "Issuer": "ConstructionTracker",
      "Audience": "ConstructionTracker"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "System": "Warning",
      "Microsoft": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "None"
    }
  },
  "Swagger": {
    "ShowSummaries": false
  }
}

